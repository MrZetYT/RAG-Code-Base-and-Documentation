@page "/chat"
@using RAG_Code_Base.Services.Explanation
@using RAG_Code_Base.Models
@inject ExplanationService ExplanationService
@inject ILogger<Chat> Logger

<div class="chat-page">
    <div class="chat-header">
        <h2>💬 RAG Assistant</h2>
        <p class="subtitle">Задавайте вопросы о загруженных файлах</p>
    </div>

    <div class="chat-messages" @ref="messagesContainer">
        @if (!messages.Any())
        {
            <div class="welcome-message">
                <div class="welcome-icon">🤖</div>
                <h3>Добро пожаловать!</h3>
                <p>Я помогу вам найти информацию в загруженных файлах.</p>
                <p class="hint">Примеры вопросов:</p>
                <ul class="examples">
                    <li>"Что делает метод SaveFile?"</li>
                    <li>"Как работает векторизация?"</li>
                    <li>"Покажи классы для работы с файлами"</li>
                </ul>
            </div>
        }
        else
        {
            @foreach (var msg in messages)
            {
                <div class="message @(msg.IsUser ? "user-message" : "assistant-message")">
                    <div class="message-avatar">
                        @if (msg.IsUser)
                        {
                            <span class="avatar-icon">👤</span>
                        }
                        else
                        {
                            <span class="avatar-icon">🤖</span>
                        }
                    </div>
                    <div class="message-content">
                        <div class="message-text">@((MarkupString)FormatMessage(msg.Text))</div>

                        @if (!msg.IsUser && msg.Sources != null && msg.Sources.Any())
                        {
                            <div class="sources">
                                <div class="sources-header" @onclick="() => msg.ShowSources = !msg.ShowSources">
                                    <span>📚 Источники (@msg.Sources.Count)</span>
                                    <span class="toggle-icon">@(msg.ShowSources ? "▼" : "▶")</span>
                                </div>
                                @if (msg.ShowSources)
                                {
                                    <div class="sources-list">
                                        @foreach (var source in msg.Sources)
                                        {
                                            <div class="source-item">
                                                <div class="source-header">
                                                    <span class="source-file">📄 @source.FileName</span>
                                                    <span class="source-similarity">@source.Similarity.ToString("P1")</span>
                                                </div>
                                                <div class="source-location">
                                                    @if (!string.IsNullOrEmpty(source.ClassName))
                                                    {
                                                        <span>Класс: @source.ClassName</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(source.MethodName))
                                                    {
                                                        <span>Метод: @source.MethodName</span>
                                                    }
                                                    <span>Строки: @source.StartLine-@source.EndLine</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }

                        <div class="message-time">@msg.Timestamp.ToString("HH:mm")</div>
                    </div>
                </div>
            }
        }

        @if (isLoading)
        {
            <div class="message assistant-message">
                <div class="message-avatar">
                    <span class="avatar-icon">🤖</span>
                </div>
                <div class="message-content">
                    <div class="typing-indicator">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="chat-input-container">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-banner">
                ⚠️ @errorMessage
            </div>
        }

        <div class="chat-input-wrapper">
            <textarea @bind="userInput"
                      @bind:event="oninput"
                      @onkeydown="HandleKeyDown"
                      placeholder="Напишите ваш вопрос..."
                      class="chat-input"
                      rows="1"
                      disabled="@isLoading"></textarea>

            <button @onclick="SendMessage"
                    class="send-button"
                    disabled="@(string.IsNullOrWhiteSpace(userInput) || isLoading)">
                @if (isLoading)
                {
                    <span class="spinner"></span>
                }
                else
                {
                    <span>🚀</span>
                }
            </button>
        </div>

        <div class="input-hint">
            Нажмите Enter для отправки, Shift+Enter для новой строки
        </div>
    </div>
</div>

