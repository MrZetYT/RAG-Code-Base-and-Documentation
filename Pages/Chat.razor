@code {
    private List<ChatMessage> messages = new();
    private string userInput = string.Empty;
    private bool isLoading = false;
    private string? errorMessage = null;
    private ElementReference messagesContainer;

    private class ChatMessage
    {
        public string Text { get; set; } = string.Empty;
        public bool IsUser { get; set; }
        public DateTime Timestamp { get; set; } = DateTime.Now;
        public List<SimilarBlock>? Sources { get; set; }
        public bool ShowSources { get; set; } = false;
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(userInput) || isLoading)
            return;

        errorMessage = null;
        var question = userInput.Trim();
        userInput = string.Empty;

        messages.Add(new ChatMessage
        {
            Text = question,
            IsUser = true
        });

        isLoading = true;
        StateHasChanged();

        try
        {
            var response = await ExplanationService.ExplainWithSearchAsync(question);

            messages.Add(new ChatMessage
            {
                Text = response.Answer,
                IsUser = false,
                Sources = response.FoundBlocks
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка при получении ответа");
            errorMessage = "Произошла ошибка при обработке вопроса. Попробуйте еще раз.";

            messages.Add(new ChatMessage
            {
                Text = "Извините, произошла ошибка при обработке вашего запроса. Пожалуйста, попробуйте переформулировать вопрос.",
                IsUser = false
            });
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private string FormatMessage(string text)
    {
        if (string.IsNullOrWhiteSpace(text))
            return string.Empty;

        text = System.Web.HttpUtility.HtmlEncode(text);

        text = System.Text.RegularExpressions.Regex.Replace(
            text,
            @"`([^`]+)`",
            "<code style='background: rgba(138, 43, 226, 0.2); padding: 3px 8px; border-radius: 5px; font-family: monospace; color: #c084fc;'>$1</code>"
        );

        text = System.Text.RegularExpressions.Regex.Replace(
            text,
            @"\*\*([^*]+)\*\*",
            "<strong style='color: #c084fc;'>$1</strong>"
        );

        text = text.Replace("\n", "<br/>");

        return text;
    }
}